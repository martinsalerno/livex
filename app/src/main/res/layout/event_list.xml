<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/eventListImg"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:contentDescription="Personal"
            android:scaleType="centerCrop"
            android:src="@drawable/personal_fest_fondo"
            android:foreground="@drawable/gradient_event"/>

        <TextView
            android:id="@+id/eventListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="24sp"
            android:background="#44FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:text="RED HOT CHILI PEPPERS"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:id="@+id/eventDateList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="20/12/18 - 20/12/18"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_schedule_black_24dp"
                    android:padding="8dp"
                    android:drawablePadding="10dp">
                </TextView>
                <TextView
                    android:id="@+id/eventPresenceList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Ticket no escaneado"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/ic_camera_white_24dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:drawablePadding="10dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:weightSum="2">
                <TextView
                    android:id="@+id/eventArtistsList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="10 artistas"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_music_note_black_24dp"
                    android:padding="8dp"
                    android:drawablePadding="10dp">
                </TextView>
                <TextView
                    android:id="@+id/eventCommercesList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:text="10 comercios"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_store_black_24dp"
                    android:padding="8dp"
                    android:drawablePadding="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>